<!DOCTYPE html>
<html>
<head>
    <title>Planner</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_importmap_tags %>
</head>

<body class="bg-white">
    <nav class="navbar sticky-top bg-white border-bottom">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="/">Programmeerbalie</a>
            <span class="ms-auto d-none d-sm-block text-muted">
                <% if signed_in? %>
                    <%= current_user.name %>
                <% elsif request.session['cas'] %>
                    <%= request.session['cas']['user'] %>
                <% end %>
            </span>
            <%= button_to 'Logout', logout_path, method: :post, class: 'btn btn-sm btn-outline-secondary ms-3' %>
        </div>
    </nav>
    <% if notice.present? %>
    <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert.present? %>
    <p class="alert alert-danger"><%= alert.html_safe %></p>
    <% end %>
    <div class="container mt-4 mt-md-5">
        <%= yield %>
    </div>
</body>
</html>
